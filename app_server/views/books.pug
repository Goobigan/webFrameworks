extends layout

include _includes/sharedHTMLfunctions

block content
  section#team.pb-5
    .container
      h5.section-title.h1= pageHeader.title
      small &nbsp;#{pageHeader.strapline}
    .row
      if (books.length === 0) 
        p = message 
      else
        each book in books
          .col-xs-12.col-sm-6.col-md-3
            .image-flip(ontouchstart="this.classList.toggle('hover');")
              .mainflip              
                .backside
                  .card
                    .card-body.text-center.mt-4
                      h4.card-title 
                        h2= book.bookName
                      p.synopsis= book.synopsis
                      ul.list-inline
                        li.list-inline-item= book.author
                        .genres
                          each genre in book.Genres
                            span.badge.badge-warning= genre
                        small &nbsp;                      

                   
